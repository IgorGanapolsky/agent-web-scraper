  "triggers": [
    {
      "id": "stripe_live_webhook",
      "name": "Stripe Live Payment Webhook",
      "type": "n8n-nodes-base.webhook",
      "position": [240, 300],
      "parameters": {
        "httpMethod": "POST",
        "path": "stripe-webhook-live",
        "authentication": "headerAuth",
        "options": {
          "allowedOrigins": "stripe.com",
          "webhookSignatureRequired": true
        }
