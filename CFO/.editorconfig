# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 88
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{css,scss,json}]
indent_size = 2
